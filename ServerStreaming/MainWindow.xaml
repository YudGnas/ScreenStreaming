<Window x:Class="ServerStreaming.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServerStreaming"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image Name="imgView" Stretch="Uniform"/>
        <StackPanel Orientation="Horizontal" Margin="0, 400 , 0 , 0">
            <Button Content="Start Recording" Width="30" Height="20" Margin="5"
            Click="StartRecording_Click"/>
            <Button Content="Stop Recording" Width="30" Height="20" Margin="5"
            Click="StopRecording_Click"/>
        </StackPanel>

        <TextBlock x:Name="StatusText" Margin="10" Foreground="Black"/>
    </Grid>

</Window>
